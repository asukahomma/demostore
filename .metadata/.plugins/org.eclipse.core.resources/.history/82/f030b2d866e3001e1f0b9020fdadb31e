package com.demostore.asuka.entity;

import java.sql.Timestamp;

import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.Table;
import lombok.Data;

@Data
@Entity
public class User {

	public Integer id;@Column(name = "username", nullable = false)
	public String username;
	
	@Column(name = "name", nullable = false)
	public String name;
	
	@Column(name = "authority", nullable = false)
	public Integer authority;
	
	@Column(name = "mail", nullable = false)
	public String mail;
	
	@Column(name = "tel", nullable = true)
	public Integer tel;
	
	@Column(name = "password", nullable = false)
	public String password;
	
	@Column(name = "delete_flg", nullable = false)
	public Integer deleteFlg;
	
	@Column(name = "enter_user", nullable = false)
	public String enterUser;
	
	@Column(name = "enter_date", nullable = false)
	public Timestamp enterDate;
	
	@Column(name = "update_user", nullable = false)
	public String updateUser;
	
	@Column(name = "update_date", nullable = false)
	public Timestamp updateDate;
	
}
